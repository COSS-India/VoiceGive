# AgriDaan FastAPI Backend Configuration
# Copy this file to .env and update the values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./agridaan.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/agridaan
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Session Configuration
SESSION_TIMEOUT_SECONDS=1800
SESSION_CONTRIBUTIONS_LIMIT=5
SESSION_VALIDATIONS_LIMIT=25
MAX_SESSIONS_PER_USER=3

# OTP Configuration
OTP_EXPIRY_SECONDS=300
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN=60

# Certificate Requirements
CERT_CONTRIBUTIONS_REQUIRED=5
CERT_VALIDATIONS_REQUIRED=25
CERT_TITLE=Agri Bhasha Samarthak
CERT_DESCRIPTION=Certificate for completing voice contributions and validations
CERT_ISSUER=Digital India Bhashadaan Initiative
CERT_VALIDITY_DAYS=365

# File Upload Limits
MAX_AUDIO_FILE_SIZE_MB=10
MAX_AUDIO_DURATION_SECONDS=30
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,aac
MAX_FILE_SIZE_MB=10

# Validation Configuration
VALIDATION_QUEUE_SIZE=25
VALIDATION_TIMEOUT_SECONDS=300
MIN_VALIDATION_CONFIDENCE=0.7

# Contact Information
SUPPORT_EMAIL=support-bhashadaan.dibd@gmail.com
SUPPORT_PHONE=+91-11-12345678
WEBSITE=https://agridaan.gov.in

# Mock Data Configuration (for testing)
MOCK_OTP=123456
MOCK_MOBILE=9177454678
MOCK_EMAIL=ragani.dibd@gmail.com
MOCK_FIRST_NAME=Ragani
MOCK_LAST_NAME=Shukla
MOCK_STATE=Maharashtra
MOCK_DISTRICT=Amravati
MOCK_LANGUAGE=Marathi
MOCK_CERTIFICATE_ID=DIC-20250917-0123

# Server URLs
PRODUCTION_URL=https://api.agridaan.gov.in/v1
DEVELOPMENT_URL=https://dev-api.agridaan.gov.in/v1
STAGING_URL=https://staging-api.agridaan.gov.in/v1

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Feature Flags
ENABLE_VOICE_CONTRIBUTIONS=true
ENABLE_AUDIO_VALIDATION=true
ENABLE_CERTIFICATE_GENERATION=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_LOCATION_SERVICES=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# SMS Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+1234567890

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Storage Configuration (Local Only)
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
MAX_STORAGE_SIZE_GB=10

# Security
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Logging
LOG_FORMAT=json
LOG_ROTATION_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5
